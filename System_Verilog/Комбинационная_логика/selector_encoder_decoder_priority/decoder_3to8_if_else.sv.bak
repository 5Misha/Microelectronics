module decoder_3to8_if_else(y, x);

input logic y[2:0];
output x[7:0];

always_comb begin
    if (data_in == 3'b000)      data_out = 8'b00000001;
    else if (data_in == 3'b001) data_out = 8'b00000010;
    else if (data_in == 3'b010) data_out = 8'b00000100;
    else if (data_in == 3'b011) data_out = 8'b00001000;
    else if (data_in == 3'b100) data_out = 8'b00010000;
    else if (data_in == 3'b101) data_out = 8'b00100000;
    else if (data_in == 3'b110) data_out = 8'b01000000;
    else                        data_out = 8'b10000000;
end

endmodule
